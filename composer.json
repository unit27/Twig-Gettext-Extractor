{
    "name"			: "unit27/twig-gettext-extractor",
    "type"			: "application",
    "description"	: "The Twig Gettext Extractor is Poedit friendly tool which extracts translations from twig templates.",
    "license"		: "MIT",

    "authors": [
        {
            "name"	: "Przemyslaw Ankowski",
            "email"	: "przemyslaw.ankowski@gmail.com"
        }
    ],

    "require": {
      "php"					: ">=5.6.0",
      "twig/twig"			: ">=2.4",
      "twig/extensions"		: ">=1.5",
      "symfony/twig-bridge"	: ">=2.0,<3.0",
      "symfony/routing"		: ">=2.0,<3.0",
      "symfony/filesystem"	: ">=2.0,<3.0",
      "symfony/translation"	: ">=2.0,<3.0",
      "symfony/form"		: ">=2.0,<3.0"
    },

    "require-dev": {
        "symfony/config":      "~2.7",
        "phpunit/phpunit":     "~4.8"
    },

    "autoload": {
        "psr-0": { "Twig\\Gettext": "." }
    },

    "bin": ["twig-gettext-extractor"],

    "config": {
        "bin-dir": "bin"
    }
}
